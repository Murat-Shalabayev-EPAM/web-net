@using Northwind.Models.ViewModels
@model CreateProductViewModel

@{
    var title = "Create Product";
}

<form method="post" asp-action="Upsert">
    @if (Model.Product.ProductID != 0)
    {
        title = "Edit Product";
        <input asp-for="Product.ProductID" hidden />
    }
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.ProductName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.ProductName" class="form-control" />
                        <span asp-validation-for="Product.ProductName" class="text-danger"/>
                    </div>
                </div>
                <div class="form-group row pt-1">
                    <div class="col-4">
                        <label asp-for="Product.SupplierID"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Product.SupplierID" asp-items="@Model.SupplierSelectList" class="form-control">
                            <option disabled selected>--Select Supplier--</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row pt-1">
                    <div class="col-4">
                        <label asp-for="Product.CategoryID"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Product.CategoryID" asp-items="@Model.CategorySelectList" class="form-control">
                            <option disabled selected>--Select Category--</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row pt-1">
                    <div class="col-4">
                        <label asp-for="Product.QuantityPerUnit"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.QuantityPerUnit" class="form-control" />
                    </div>
                </div>
                <div class="form-group row pt-1">
                    <div class="col-4">
                        <label asp-for="Product.UnitPrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.UnitPrice" class="form-control" />
                    </div>
                </div>
                <div class="form-group row pt-1">
                    <div class="col-4">
                        <label asp-for="Product.UnitsInStock"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.UnitsInStock" class="form-control" />
                        <span asp-validation-for="Product.UnitsInStock" class="text-danger" />
                    </div>
                </div>
                <div class="form-group row pt-1">
                    <div class="col-4">
                        <label asp-for="Product.UnitsOnOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.UnitsOnOrder" class="form-control" />
                        <span asp-validation-for="Product.UnitsOnOrder" class="text-danger" />
                    </div>
                </div>
                <div class="form-group row pt-1">
                    <div class="col-4">
                        <label asp-for="Product.ReorderLevel"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.ReorderLevel" class="form-control" />
                        <span asp-validation-for="Product.ReorderLevel" class="text-danger" />
                    </div>
                </div>
                <div class="form-group row pt-1">
                    <div class="col-4">
                        <label asp-for="Product.Discontinued"></label>
                    </div>
                    <div class="col-8">
                        <div class="form-check form-switch">
                            <input asp-for="Product.Discontinued" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">Discontinued</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row pt-1">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Product.ProductID != 0)
                            {
                                <input type="submit" class="btn btn-info w-100" value="Update"/>
                            }
                            else
                            {
                                <input type="submit" class="btn btn-info w-100" value="Create" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4"
                @* Keep this empty *@
            </div>
        </div>
    </div> 
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"  />
    }
}

